{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "sh -c 'FILE=$(jq -r .tool_input.file_path); [ \"${FILE##*.}\" = \"py\" ] && ruff check --fix \"$FILE\" 2>&1 || true'"
          }
        ]
      }
    ]
  }
}